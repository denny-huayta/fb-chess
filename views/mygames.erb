<div class="row">
	<div class="container">
		<div>
			<h1>
			My Games
			</h1>
			<p>If you want create new game press "new game" button.</p>
			<p>
				<a class="btn btn-success" href="/mygamenew" method="post">New Game</a>				
			</p>
			<!--
			<div class="alert">
				<button type="button" class="close" data-dismiss="alert">Ã—</button>
				<strong>Warning!</strong> You can not challenge yourself.
			</div>
			-->
			<table class="table table-striped table-bordered table-hover"> <!-- table-striped  .table-condensed -->				
				<thead>
					<tr>
						<td>Item
						</td>
						<td>Player 1 Id
						</td>
						<td>Player 1
						</td>
						<td>Player 2
						</td>
						<td>Current Player
						</td>
						<td>Winner
						</td>
						<td>See Game
						</td>
						<td>Delete Game
						</td>
						<td>Status
						</td>				
					</tr>
				</thead>
				<tbody>
				<% unless @games.empty? %>				
				<% @games.each do |game| %>							
					<tr>
						<td> <%= game.item %>
						</td>
						<td> <%= game.player1Id %>
						</td>
						<td> <%= game.player1 %>
						</td>
						<td> <%= game.player2 %>
						</td>
						<td> <%= game.currentPlayer %>
						</td>
						<td> <%= game.winner %>
						</td>
						<td><a href="/see?game=<%=game.gameId%>" class="btn" method="post">See</a>				
						</td>
						<td><a href="/delete?game=<%=game.gameId%>" class="btn" method="post">Delete</a>
						</td>
						<td> <%= game.status %>
						</td>
					</tr>				
				<% end %>
				<% end %>
				<!-- Comment -->
				</tbody>		
			</table>
		</div>
	</div>
</div>